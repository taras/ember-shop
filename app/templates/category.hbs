<!-- Thumbnails -->
<div class="large-8 columns">
  <div class="row">
    {{#each product in products}}
      <div class="large-4 small-6 columns">
        <img {{bind-attr src=product.image}}>

        <div class="panel">
          <h5>{{product.title}}</h5>
          <h6 class="subheader">${{product.finalPrice}}</h6>
        </div>
      </div>
    {{/each}}
  </div>
</div>
